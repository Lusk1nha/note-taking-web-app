// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Notes {
  id     String @id @default(cuid())
  userId String

  title      String
  tags       Tags[]
  content    String?
  isArchived Boolean @default(false)

  createdAt  DateTime @default(now())
  lastEdited DateTime @updatedAt

  // User cannot have notes with same name
  @@unique([title, userId])
}

model Tags {
  id      String  @id @default(cuid())
  userId  String
  name    String
  Notes   Notes?  @relation(fields: [notesId], references: [id])
  notesId String?
}
